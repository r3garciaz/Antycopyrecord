                <h3 class="text-white font-bold mb-4">Servicios</h3>
                <ul class="space-y-2 text-gray-400">
                    <li>
                        <a
                            href="#"
                            class="hover:text-brand-primary transition-colors"
                            >Mezcla y Masterización</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="hover:text-brand-primary transition-colors"
                            >Producción de Beats</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="hover:text-brand-primary transition-colors"
                            >Grabación de Voz</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="hover:text-brand-primary transition-colors"
                            >Composición</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Contact -->
            <div>
                <h3 class="text-white font-bold mb-4">Contacto</h3>
                <ul class="space-y-2 text-gray-400">
                    <li>
                        <a
                            href="mailto:info@antycopyrecord.com"
                            class="hover:text-brand-primary transition-colors"
                            >info@antycopyrecord.com</a
