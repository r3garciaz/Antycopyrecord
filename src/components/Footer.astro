        >
            <!-- Brand -->
            <div class="col-span-1 lg:col-span-2">
                <a href="/" class="flex items-center gap-3 mb-4">
                    <img
                        src="/logo.jpg"
                        alt="Antycopyrecord Logo"
                        class="h-8 w-auto rounded-md"
